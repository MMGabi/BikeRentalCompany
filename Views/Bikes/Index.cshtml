@model IEnumerable<BikeRentalCompany0.Models.Bike>

@{
    ViewData["Title"] = "Index";
}
<div class="container">
<h1>Rowery</h1>

<div class="col-10 text-end">
    <a asp-action="Create"> <i class="bi bi-plus-circle-dotted"></i> &nbsp; Dodaj nowy rower</a>
</div>
<br/>
<br />
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NazwaRoweru)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RozmiarKola)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdRoweru)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NazwaRoweru)
            </td>
             <td>
                @Html.DisplayFor(modelItem => item.IdRoweru)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RozmiarKola)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdRoweru">Edytuj</a> |
                <a asp-action="Details" asp-route-id="@item.IdRoweru">Szczegóły</a> |
                <a asp-action="Delete" asp-route-id="@item.IdRoweru">Usuń</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>