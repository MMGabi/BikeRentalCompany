@model BikeRentalCompany0.Models.Bike

@{
    ViewData["Title"] = "Create";
}

<div class="container">
<h1>Dodaj Rower</h1>

<h4>Nowy rower</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NazwaRoweru" class="control-label"></label>
                <input asp-for="NazwaRoweru" class="form-control" />
                <span asp-validation-for="NazwaRoweru" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RozmiarKola" class="control-label"></label>
                <input asp-for="RozmiarKola" class="form-control" />
                <span asp-validation-for="RozmiarKola" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" style="width:150px" />
            </div>
            
        </form>
    </div>
</div>
<div>
    <a asp-action="Index" class="btn btn-secondary" style="width:150px">Powróć do listy</a>
</div>


</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
